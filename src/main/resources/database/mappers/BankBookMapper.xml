<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		    <mapper namespace="com.im.start.bankbook.BankBookDAO">
		    
		    	<select id="getList" resultType="com.im.start.bankbook.BankBookDTO">
		    	SELECT * FROM BANK_BOOK
		    	</select>
		    	
		    	<select id="getDetail" parameterType="com.im.start.bankbook.BankBookDTO" resultType="com.im.start.bankbook.BankBookDTO">
		    	SELECT * FROM BANK_BOOK WHERE BOOK_NUM = #{book_Num}
		    	</select>
		    	
		    	<insert id="setBankBook" parameterType="com.im.start.bankbook.BankBookDTO">
		    	INSERT INTO BANK_BOOK VALUES (#{book_Num},#{book_Name},#{book_Rate},#{book_Sale})
		    	</insert>
		    	
		    	<update id="setUpdate" parameterType="com.im.start.bankbook.BankBookDTO">
    			UPDATE BANK_BOOK SET BOOK_NAME = #{book_Name} , BOOK_RATE = #{book_Rate} WHERE BOOK_NUM = #{book_Num}
    			</update>
    			
    			<delete id="delete" parameterType="com.im.start.bankbook.BankBookDTO">
    			DELETE BANK_BOOK WHERE BOOK_NUM = #{book_Num}</delete>
    			
    			
		    </mapper>