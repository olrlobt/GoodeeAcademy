<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.home.board.BoardMapper">

			<sql id="search">
				WHERE
				<choose>
					<when test="kind == 'title'">TITLE</when>
					<when test="kind == 'userId'">WRITER</when>
					<otherwise>CONTENTS</otherwise>
				</choose>
				LIKE CONCAT('%',#{search},'%')
			</sql>
			
			
	<select id="getList" resultType="BoardVO" parameterType="Pager">
		SELECT * FROM BOARD 
		<include refid="search"></include> 
		ORDER BY NUM DESC
		limit #{startRow}, #{perPage}
	</select>
	<select id="getCount" resultType="Long" parameterType="Pager">
		SELECT COUNT(NUM) FROM BOARD <include refid="search"></include> 
	</select>
	<select id="getDetail" parameterType="BoardVO" resultType="BoardVO">
		SELECT *
		FROM BOARD
		WHERE NUM=#{num}			 
	</select>

